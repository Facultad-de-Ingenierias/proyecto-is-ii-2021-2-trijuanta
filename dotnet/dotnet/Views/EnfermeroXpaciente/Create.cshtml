@model dotnet.Models.DB.EnfermeroXpaciente

@{
    ViewData["Title"] = "Create";
}

<h1>Asignar Enfermero</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdEnfermero" class="control-label"></label>
                <select asp-for="IdEnfermero" class ="form-control" asp-items="ViewBag.IdEnfermero"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class ="form-control" asp-items="ViewBag.IdPaciente"></select>
            </div>
            
            <div class="row">

                <div class="form-group col">
                    <a class="btn btn-outline-primary" asp-controller="Paciente" asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group col d-flex justify-content-end">
                    <input type="submit" value="Asignar" asp-controller="Paciente" asp-action="Index" class="btn btn-primary" />
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
