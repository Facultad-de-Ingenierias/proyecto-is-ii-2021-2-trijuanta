@model dotnet.Models.DB.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Paciente</h1>

<hr />
<div class="row">
    <div>
         <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">

                <div class="form-group col">
                    <input asp-for="Documento" class="form-control" placeholder="Documento" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>

            </div>

            <div class="row">

                <div class="form-group col">
                    <input asp-for="PrimerNombre" class="form-control" placeholder="Primer Nombre" />
                    <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <input asp-for="SegundoNombre" class="form-control" placeholder="Segundo Nombre" />
                    <span asp-validation-for="SegundoNombre" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <input asp-for="PrimerApellido" class="form-control" placeholder="Primer Apellido" />
                    <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo Apellido" />
                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                </div>

            </div>

            <div class="row">

                <div class="form-group col">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <label asp-for="Sexo" class="control-label"></label>
                    <input asp-for="Sexo" class="form-control" placeholder="Sexo" />
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <label asp-for="Rh" class="control-label"></label>
                    <input asp-for="Rh" class="form-control" placeholder="Rh" />
                    <span asp-validation-for="Rh" class="text-danger"></span>
                </div>

            </div>

            <div class="row">

                <div class="form-group col">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" placeholder="Celular" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" placeholder="Correo" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <label asp-for="IdDireccionGeo" class="control-label"></label>
                    <select asp-for="IdDireccionGeo" class="form-control" asp-items="ViewBag.IdDireccionGeo"></select>
                </div>

            </div>

            <div class="row">

                <div class="form-group col">
                    <a class="btn btn-outline-primary" asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group col d-flex justify-content-end">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>

            </div>

        </form>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
