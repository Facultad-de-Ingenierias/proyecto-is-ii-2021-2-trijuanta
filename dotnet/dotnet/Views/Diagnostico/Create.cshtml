@model dotnet.Models.DB.Diagnostico

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Diagnostico</h1>
<hr />

<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="Sugerencia" class="control-label"></label>
                    <input asp-for="Sugerencia" class="form-control" />
                    <span asp-validation-for="Sugerencia" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Antecedentes" class="control-label"></label>
                    <input asp-for="Antecedentes" class="form-control" />
                    <span asp-validation-for="Antecedentes" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="SaludSexual" class="control-label"></label>
                    <input asp-for="SaludSexual" class="form-control" />
                    <span asp-validation-for="SaludSexual" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>


            </div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="IdPaciente" class="control-label"></label>
                    <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                </div>

                <div class="form-group col">
                    <label asp-for="IdMedico" class="control-label"></label>
                    <select asp-for="IdMedico" class="form-control" asp-items="ViewBag.IdMedico"></select>
                </div>
                <div class="form-group col">
                    <label asp-for="IdSignosVitales" class="control-label"></label>
                    <select asp-for="IdSignosVitales" class="form-control" asp-items="ViewBag.IdSignosVitales"></select>
                </div>
            </div>
            <div class="row">

                <div class="form-group col">
                    <a class="btn btn-outline-primary" asp-controller="Paciente" asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group col d-flex justify-content-end">
                    <input type="submit" value="Registrar" asp-controller="Paciente" asp-action="Index" class="btn btn-primary" />
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
