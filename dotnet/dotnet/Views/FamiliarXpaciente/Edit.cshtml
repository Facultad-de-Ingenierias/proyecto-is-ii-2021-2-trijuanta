@model dotnet.Models.DB.FamiliarXpaciente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Asignación</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdFamiliar" class="control-label"></label>
                <select asp-for="IdFamiliar" class="form-control" asp-items="ViewBag.IdFamiliar"></select>
                <span asp-validation-for="IdFamiliar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
             <div class="row">

                <div class="form-group col">
                    <a class="btn btn-outline-primary" asp-action="Index">Cancelar</a>
                </div>

                <div class="form-group col d-flex justify-content-end">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
